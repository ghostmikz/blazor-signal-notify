@page "/manager-dashboard"
@using ServerCounterApp.Client.Services
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS
@inject PushNotificationService PushService

<div class="container mt-5">
    @* Header with Logout *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Manager Dashboard</h2>
        <button class="btn btn-outline-danger" @onclick="HandleLogout">
            Logout
        </button>
    </div>

    @* Notification Setup Card *@
    <div class="card shadow-sm mb-4 border-primary">
        <div class="card-body d-flex justify-content-between align-items-center">
            <div>
                <h5 class="card-title mb-1">Push Notification Settings</h5>
                <p class="text-muted small mb-0">Allow this browser to receive desktop alerts even when the tab is closed.</p>
            </div>
            <button class="btn btn-primary" @onclick="EnableNotifications" disabled="@isSubscribing">
                @if (isSubscribing)
                {
                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                }
                else
                {
                    <span>üîî Enable Alerts</span>
                }
            </button>
        </div>
        @if (!string.IsNullOrEmpty(statusMessage))
        {
            <div class="card-footer py-1">
                <small class="@(statusMessage.Contains("‚ùå") ? "text-danger" : "text-success")">@statusMessage</small>
            </div>
        }
    </div>

    @* Status Banner *@
    <div class="alert alert-success d-flex align-items-center shadow-sm">
        <div>
            <h4 class="alert-heading mb-1">Dashboard Active</h4>
            <p class="mb-0">You are logged in as <strong>Manager</strong>. Incoming requests will appear below.</p>
        </div>
    </div>

    @* Activity Feed *@
    <div class="card shadow-sm mt-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Incoming Leave Requests</h5>
            <span class="badge bg-light text-primary">@requests.Count Total</span>
        </div>
        <div class="card-body">
            @if (requests == null || requests.Count == 0)
            {
                <div class="text-center py-5">
                    <p class="text-muted mb-0">No history found. Listening for incoming alerts...</p>
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Date & Time</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var req in requests)
                            {
                                <tr>
                                    <td>@req.Time.ToString("MM/dd HH:mm:ss")</td>
                                    <td>@req.Message</td>
                                    <td><span class="badge bg-success">Received</span></td>
                                    <td>
                                        <button class="btn btn-sm btn-outline-success">View</button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private List<RequestLog> requests = new();
    private string? statusMessage;
    private bool isSubscribing = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadHistory();
        // Set tab title to clean state
        await PushService.SetUnreadCount(0);
    }

    private async Task EnableNotifications()
    {
        isSubscribing = true;
        statusMessage = "Requesting permission...";
        
        try
        {
            var subscription = await PushService.SubscribeUserAsync();
            
            // Note: Sending 'Manager' as both username and role for now per your logout logic
            var response = await Http.PostAsJsonAsync("api/notifications/subscribe/Manager/Manager", subscription);

            if (response.IsSuccessStatusCode)
            {
                statusMessage = "‚úÖ Notifications enabled successfully!";
            }
            else
            {
                statusMessage = $"‚ùå Server refused subscription ({response.StatusCode})";
            }
        }
        catch (Exception ex)
        {
            statusMessage = $"‚ùå Failed: {ex.Message}";
        }
        finally
        {
            isSubscribing = false;
        }
    }

    private async Task LoadHistory()
    {
        try
        {
            var result = await Http.GetFromJsonAsync<List<RequestLog>>("api/notifications/history");
            if (result != null) requests = result;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading history: {ex.Message}");
        }
    }

    private async Task HandleLogout()
    {
        try
        {
            await Http.PostAsync("api/notifications/unsubscribe/Manager", null);
            await JS.InvokeVoidAsync("blazorPushNotifications.unsubscribeUser");
            Nav.NavigateTo("/login");
        }
        catch
        {
            Nav.NavigateTo("/login");
        }
    }

    public class RequestLog 
    { 
        public string Message { get; set; } = ""; 
        public DateTime Time { get; set; } 
    }
}